{
  "version": 3,
  "port": 8080,
  "$schema": "http://www.krakend.io/schema/v3.json",
  "name": "KrakenD request and response modifier demo",
  "host": [
    "https://api.github.com"
  ],
  "plugin": {
    "pattern": ".so",
    "folder": "plugins/"
  },
  "endpoints": [
    {
      "endpoint": "/github/orgs/{org}",
      "backend": [
        {
          "url_pattern": "/orgs/{org}",
          "allow1": [
            "avatar_url",
            "blog",
            "followers"
          ],
          "mapping": {
            "blog": "website"
          },
          "group": "org",
          "extra_config": {
            "plugin/req-resp-modifier": {
              "name": [
                "krakend-debugger-request",
                "krakend-debugger-response"
              ],
              "krakend-debugger-response": {
                "url": "https://en.gravatar.com/"
              }
            }
          }
        },
        {
          "url_pattern": "/orgs/{org}/repos",
          "mapping": {
            "collection": "repos"
          },
          "is_collection": true,
          "extra_config": {
            "plugin/req-resp-modifier": {
              "name1": [
                "krakend-debugger-request",
                "krakend-debugger-response"
              ]
            }
          }
        }
      ],
      "extra_config": {
        "proxy": {
          "sequential": true
        },
        "plugin/req-resp-modifier": {
          "name1": [
            "krakend-debugger-request",
            "krakend-debugger-response"
          ]
        }
      }
    }
  ]
}